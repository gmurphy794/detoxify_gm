{
    "name": "Jigsaw_DeBERTa",
    "n_gpu": 1,
    "batch_size": 5,
    "accumulate_grad_batches": 3,
    "loss": "binary_cross_entropy",
    "arch": {
        "type": "DeBERTa",
        "args": {
            "num_classes": 6,
            "model_type": "microsoft/deberta-base",
            "model_name": "DebertaForSequenceClassification",
            "tokenizer_name": "DebertaTokenizer"
        }
    },
    "dataset": {
        "type": "JigsawDataOriginal",
        "args": {
            "train_csv_file": "../jigsaw_data/jigsaw-toxic-comment-classification-challenge/train.csv",
            "test_csv_file": "../jigsaw_data/jigsaw-toxic-comment-classification-challenge/val.csv",
            "add_test_labels": false,
            "classes": [
                "toxicity",
                "severe_toxicity",
                "obscene",
                "threat",
                "insult",
                "identity_attack"
            ]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-5,
            "weight_decay": 3e-6,
            "amsgrad": true
        }
    }
}
